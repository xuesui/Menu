<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        tools:context=".ui.fragment.MainFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp">

        <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="300dp"
                                                             android:layout_gravity="center"
                                                             android:layout_centerHorizontal="true"
                                                             app:app_round_corner="30dp"
                                                             android:layout_centerVertical="true"
                                                             app:app_clip_background="true"
                                                             app:app_shadow_width="1dp"
                                                             app:app_shadow_color="#EAEAEA"
                                                             android:layout_height="wrap_content">

            <EditText android:layout_width="match_parent"
                      android:layout_height="35dp"
                      android:background="@null"
                      android:hint="@string/app_search"
                      android:drawableStart="@drawable/search"
                      android:inputType="text"
                      android:textSize="16sp"
                      android:drawablePadding="10dp"
                      android:paddingStart="15dp"
                      android:layout_gravity="center_vertical"/>
        </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>
    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_width="match_parent"
                                                           android:id="@+id/refreshn_main"
                                                           android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginTop="15dp"
                          android:orientation="vertical">

                <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="match_parent"
                                                                     android:layout_gravity="center"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     app:app_round_corner="10dp"
                                                                     app:app_clip_background="true"
                                                                     android:layout_height="wrap_content">

                    <com.youth.banner.Banner android:layout_width="match_parent"
                                             android:layout_height="150dp"
                                             android:id="@+id/banner_main"/>
                </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>


                <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:layout_marginTop="20dp"
                                                           android:id="@+id/recycler_main"/>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/app_daily_recommand"
                              android:textColor="#000000"
                              android:textStyle="bold"
                              android:layout_marginStart="20dp"
                              android:layout_centerVertical="true"
                              android:textSize="22sp"/>

                    <ImageView android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:id="@+id/iv_mian_more"
                               android:layout_alignParentEnd="true"
                               android:layout_centerVertical="true"
                               android:layout_marginEnd="20dp"
                               android:background="@drawable/main_more"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_toStartOf="@id/iv_mian_more"
                              android:text="@string/app_mian_more"
                              android:layout_marginEnd="10dp"
                              android:textColor="#bfbfbf"
                              android:layout_centerVertical="true"
                              android:layout_height="wrap_content"/>

                </RelativeLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginStart="20dp"
                              android:layout_marginEnd="20dp"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:id="@+id/main_card1"
                                                       android:layout_marginEnd="5dp"
                                                       app:cardCornerRadius="4dp"
                                                       app:cardElevation="2dp"
                                                       android:background="#FFFFFF"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginBottom="5dp"
                                                       android:layout_marginTop="5dp"
                                                       android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="match_parent"
                                       android:layout_height="180dp"
                                       android:scaleType="centerCrop"
                                       android:id="@+id/iv_main_daily_recommand1"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="16sp"
                                      android:layout_marginTop="10dp"
                                      android:textColor="#404040"
                                      android:id="@+id/tv_main_daily_name1"
                                      android:layout_marginStart="5dp"
                                      android:textStyle="bold"
                                      tools:text="芥末淋鸭掌"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="14sp"
                                      android:maxLength="100"
                                      android:maxLines="2"
                                      android:layout_marginStart="5dp"
                                      android:ellipsize="end"
                                      android:layout_marginTop="10dp"
                                      android:layout_marginEnd="5dp"
                                      android:layout_marginBottom="10dp"
                                      tools:text="青芥末更提升了馋嘴鸭掌的口感！"
                                      android:id="@+id/tv_main_daily_content1"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:id="@+id/main_card2"
                                                       app:cardCornerRadius="4dp"
                                                       app:cardElevation="2dp"
                                                       android:background="#FFFFFF"
                                                       android:layout_marginBottom="5dp"
                                                       android:layout_marginTop="5dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="5dp"
                                                       android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="match_parent"
                                       android:layout_height="180dp"
                                       android:scaleType="centerCrop"
                                       android:id="@+id/iv_main_daily_recommand2"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="16sp"
                                      android:textColor="#404040"
                                      android:textStyle="bold"
                                      android:layout_marginTop="10dp"
                                      android:id="@+id/tv_main_daily_name2"
                                      android:layout_marginStart="5dp"
                                      tools:text="芥末淋鸭掌"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="14sp"
                                      android:layout_marginStart="5dp"
                                      android:maxLength="100"
                                      android:maxLines="2"
                                      android:ellipsize="end"
                                      android:layout_marginTop="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:layout_marginEnd="5dp"
                                      tools:text="青芥末更提升了馋嘴鸭掌的口感！"
                                      android:id="@+id/tv_main_daily_content2"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/app_recommand"
                              android:textColor="#000000"
                              android:textStyle="bold"
                              android:layout_marginStart="20dp"
                              android:layout_centerVertical="true"
                              android:textSize="22sp"/>

                    <ImageView android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:id="@+id/iv_main_recommand"
                               android:layout_alignParentEnd="true"
                               android:layout_centerVertical="true"
                               android:layout_marginEnd="20dp"
                               android:background="@drawable/main_more"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_toStartOf="@id/iv_main_recommand"
                              android:text="@string/app_more_recommand"
                              android:layout_marginEnd="10dp"
                              android:textColor="#bfbfbf"
                              android:layout_centerVertical="true"
                              android:layout_height="wrap_content"/>

                </RelativeLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginStart="20dp"
                              android:layout_marginEnd="20dp"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:id="@+id/main_grass_card1"
                                                       android:layout_marginEnd="5dp"
                                                       app:cardCornerRadius="4dp"
                                                       android:background="#FFFFFF"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginBottom="5dp"
                                                       android:layout_marginTop="5dp"
                                                       android:layout_height="170dp">

                        <ImageView android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:scaleType="centerCrop"
                                   android:background="@drawable/redmeat"
                                   android:id="@+id/iv_main_grass_recommand1"/>

                        <LinearLayout android:layout_width="100dp"
                                      android:layout_height="50dp"
                                      android:layout_marginBottom="10dp"
                                      android:layout_gravity="bottom"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="16sp"
                                      android:textColor="#FFFFFF"
                                      android:textStyle="bold"
                                      android:text="@string/app_big_meat"
                                      android:layout_marginTop="5dp"
                                      android:layout_marginStart="15dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="14sp"
                                      android:textColor="#FFFFFF"
                                      android:layout_marginTop="3dp"
                                      android:text="@string/app_eat_meat"
                                      android:layout_marginStart="15dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:id="@+id/main_grass_card2"
                                                       app:cardCornerRadius="4dp"
                                                       android:background="#FFFFFF"
                                                       android:layout_marginBottom="5dp"
                                                       android:layout_marginTop="5dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="5dp"
                                                       android:layout_height="170dp">

                        <ImageView android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:scaleType="centerCrop"
                                   android:background="@drawable/snacks"
                                   android:id="@+id/iv_main_grass_recommand2"/>

                        <LinearLayout android:layout_width="100dp"
                                      android:layout_height="50dp"
                                      android:layout_marginBottom="10dp"
                                      android:layout_gravity="bottom"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="16sp"
                                      android:textColor="#FFFFFF"
                                      android:textStyle="bold"
                                      android:layout_marginTop="5dp"
                                      android:text="@string/app_snacks"
                                      android:layout_marginStart="15dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="14sp"
                                      android:textColor="#FFFFFF"
                                      android:layout_marginTop="3dp"
                                      android:text="@string/app_once_eat"
                                      android:layout_marginStart="15dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="140dp"
                              android:layout_marginStart="20dp"
                              android:layout_marginTop="15dp"
                              android:orientation="horizontal">

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/main_source_card"
                                                       app:cardElevation="1dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="4dp"
                                                       android:layout_marginTop="5dp">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="@string/app_way"
                                      android:textStyle="bold"
                                      android:textSize="16sp"
                                      android:textColor="#000000"
                                      android:layout_marginStart="2dp"
                                      android:layout_marginTop="2dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginStart="2dp"
                                      android:textSize="14sp"
                                      android:text="@string/app_source"/>
                            <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="match_parent"
                                                                                 android:layout_height="match_parent"
                                                                                 android:layout_marginTop="5dp"
                                                                                 app:app_clip_background="true"
                                                                                 app:app_round_corner_top_left="90dp">

                                <ImageView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:scaleType="centerCrop"
                                           android:background="@drawable/source"/>

                            </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/main_dousha_card"
                                                       app:cardElevation="1dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="4dp"
                                                       android:layout_marginTop="5dp">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="@string/app_mifen"
                                      android:textStyle="bold"
                                      android:textColor="#000000"
                                      android:textSize="16sp"
                                      android:layout_marginStart="2dp"
                                      android:layout_marginTop="2dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginStart="2dp"
                                      android:textSize="14sp"
                                      android:text="@string/app_zhushi"/>
                            <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="match_parent"
                                                                                 android:layout_height="match_parent"
                                                                                 android:layout_marginTop="5dp"
                                                                                 app:app_clip_background="true"
                                                                                 app:app_round_corner_top_left="90dp">

                                <ImageView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:scaleType="centerCrop"
                                           android:background="@drawable/mifen"/>

                            </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/main_sichuan_card"
                                                       app:cardElevation="1dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="4dp"
                                                       android:layout_marginTop="5dp">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="@string/app_chuanwei"
                                      android:textStyle="bold"
                                      android:textColor="#000000"
                                      android:textSize="16sp"
                                      android:layout_marginStart="2dp"
                                      android:layout_marginTop="2dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginStart="2dp"
                                      android:textSize="14sp"
                                      android:text="@string/app_sichuan"/>
                            <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="match_parent"
                                                                                 android:layout_height="match_parent"
                                                                                 android:layout_marginTop="5dp"
                                                                                 app:app_clip_background="true"
                                                                                 app:app_round_corner_top_left="90dp">

                                <ImageView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:scaleType="centerCrop"
                                           android:background="@drawable/sichuan"/>

                            </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                       android:layout_weight="1"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/main_zhushi_card"
                                                       app:cardElevation="1dp"
                                                       android:layout_marginStart="5dp"
                                                       android:layout_marginEnd="20dp"
                                                       android:layout_marginTop="5dp">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="@string/app_dousha"
                                      android:textStyle="bold"
                                      android:textSize="16sp"
                                      android:textColor="#000000"
                                      android:layout_marginStart="2dp"
                                      android:layout_marginTop="2dp"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginStart="2dp"
                                      android:textSize="14sp"
                                      android:text="@string/app_tian"/>
                            <com.mredrock.cyxbs.freshman.weight.AppShawdowLayout android:layout_width="match_parent"
                                                                                 android:layout_height="match_parent"
                                                                                 android:layout_marginTop="5dp"
                                                                                 app:app_clip_background="true"
                                                                                 app:app_round_corner_top_left="90dp">

                                <ImageView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:scaleType="centerCrop"
                                           android:background="@drawable/dousha"/>

                            </com.mredrock.cyxbs.freshman.weight.AppShawdowLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <ImageView android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_marginTop="20dp"
                           android:background="@drawable/zhangchu"
                           android:layout_gravity="center_horizontal"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/app_cook"
                          android:textSize="12sp"
                          android:layout_marginTop="20dp"
                          android:layout_marginBottom="25dp"
                          android:layout_gravity="center_horizontal"
                          android:textColor="#8a8a8a"/>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>