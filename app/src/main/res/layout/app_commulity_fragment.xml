<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        tools:context=".ui.fragment.CommulityFragment">


   <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
       android:background="#FFFFFF">

       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="#404040"
               android:layout_gravity="center"
               android:text="@string/app_commulity" />
   </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/commulity_recycler"
                android:layout_gravity="top"
                android:layout_marginTop="40dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="wrap_content" />

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:id="@+id/commulity_appbar"
                android:layout_gravity="top"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFA500"
                    app:layout_scrollFlags="scroll|enterAlways|snap" />
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_anchor="@id/commulity_appbar"
                android:id="@+id/floatbutton_commulity"
                app:layout_anchorGravity="bottom|center_horizontal"
                android:src="@drawable/share" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</LinearLayout>